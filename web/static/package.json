{
  "name": "website-baseline",
  "version": "0.1.0",
  "scripts": {
    "build": "tailwindcss build -i ./src/css/input.css -o ../dist/css/style.css --minify",
    "watch": "tailwindcss build -i ./src/css/input.css -o ../dist/css/style.css --watch",
    "alpine": "npx esbuild ./src/js/index.js --outfile=../dist/js/index.js --bundle --minify",
    "scripts": "npx esbuild ./src/js/script.js --outfile=../dist/js/script.js"
  },
  "devDependencies": {
    "daisyui": "^4.7.2",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "alpinejs": "^3.13.5",
    "esbuild": "^0.20.1"
  }
}
